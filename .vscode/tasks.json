    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run SUSHI only",
            "type": "shell",
            "command": "npx",
            "args": [
                "--no",
                "fsh-sushi",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run IG Publisher (after SUSHI)",
            "type": "shell",
            "command": "java",
            "args": [
                "-Xmx8g",
                "-Djava.awt.headless=true",
                "-jar",
                "input-cache/publisher.jar",
                "-ig",
                ".",
                "-no-sushi"
            ],
            "group": "build",
            "dependsOn": "Run SUSHI only",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Download latest IG Publisher",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "_updatePublisher.sh"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
